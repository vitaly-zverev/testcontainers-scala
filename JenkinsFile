    //agent{ node 'coreos' }   // like 'master', 'linux' etc.
    //agent{ node 'coreos_ubuntu_podman' }   // like 'master', 'linux' etc.
    agent{ node 'docker' }   // like 'master', 'linux' etc.

    stages {

            stage ("docker test") {
                steps {
                    sh ('docker info')
                    sh ('docker-compose version')
                }
            }

            stage ("sbt test") {
                steps {
                    sh ('ls -la')
                    sh ('java -version')
                    sh ('sbt test')
                }
            }
    }
}